<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.dzt.dao.ICommentDAO">
	<resultMap id="comment_DB_Result" type="comment">
		<result column="code" property="code" />
		<result column="type" property="type" />
		<result column="content" property="content" />
		<result column="status" property="status" />
		<result column="commer" property="commer" />
		<result column="comment_datetime" property="commentDatetime" />
		<result column="approver" property="approver" />
		<result column="approve_datetime" property="approveDatetime" />
		<result column="remark" property="remark" />
		<result column="parent_code" property="parentCode" />
		<result column="top_code" property="topCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="parentCode != null and parentCode != '' ">
				AND t.parent_code = #{parentCode}
			</if>
			<if test="topCode != null and topCode != '' ">
				AND t.top_code = #{topCode}
			</if>
			<if test="content != null and content != '' ">
				AND t.content like "%"#{content}#"%"
			</if>
			<choose>
				 <when test='status == "AB"'>
				 	AND t.status in ('A','B')
				 </when>
				 <otherwise>
					 <if test='status != null and status != ""'>
		        		AND t.status = #{status}
					</if>
				 </otherwise>
			</choose>
			<if test="statusList != null and statusList != '' ">
				AND t.status in 
                <foreach item="item" index="index" collection="statusList" open="(" separator="," close=")">
	            	#{item}
                </foreach> 
			</if>
		</trim>
	</sql>
	<select id="select_comment" parameterType="comment" resultMap="comment_DB_Result">
		SELECT
		t.code
		,t.type
		,t.content
		,t.status
		,t.commer
		,t.comment_datetime
		,t.approver
		,t.approve_datetime
		,t.remark
		,t.top_code
		,t.parent_code
		FROM
		tstd_comment t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_comment_count" parameterType="comment"
		resultType="java.lang.Long">
		SELECT count(1) FROM tstd_comment t
		<include refid="where_condition" />
	</select>

	<insert id="insert_comment" parameterType="comment">
		INSERT INTO
		tstd_comment(
		code
		,type
		,content
		,status
		,commer
		,comment_datetime
		,approver
		,approve_datetime
		,remark
		,top_code
		,parent_code
		)
		VALUES(
		#{code}
		,#{type}
		,#{content}
		,#{status}
		,#{commer}
		,#{commentDatetime}
		,#{approver}
		,#{approveDatetime}
		,#{remark}
		,#{topCode}
		,#{parentCode}
		)
	</insert>

	<update id="update_comment" parameterType="comment">
		UPDATE tstd_comment
		SET
		content = #{content}
		,type = #{type}
		,status = #{status}
		,commer = #{commer}
		,comment_datetime = #{commentDatetime}
		,approver = #{approver}
		,approve_datetime = #{approveDatetime}
		,remark = #{remark}
		,top_code = #{topCode}
		,parent_code = #{parentCode}
		WHERE code = #{code}
	</update>

	<update id="update_approve" parameterType="comment">
		UPDATE tstd_comment
		SET
		status = #{status}
		,approver = #{approver}
		,approve_datetime = #{approveDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>

</mapper>
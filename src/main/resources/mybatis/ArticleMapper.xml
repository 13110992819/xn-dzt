<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.dzt.dao.IArticleDAO">
	<resultMap id="article_DB_Result" type="article">
		<result column="code" property="code" />
		<result column="type" property="type" />
		<result column="title" property="title" />
		<result column="pic" property="pic" />
		<result column="adv_pic" property="advPic" />
		<result column="description" property="description" />
		<result column="location" property="location" />
		<result column="order_no" property="orderNo" />
		<result column="status" property="status" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="type != null and type != '' ">
				AND t.type = #{type}
			</if>
			<if test="location != null and location != '' ">
				AND t.location = #{location}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="title != null and title != '' ">
				AND t.title like "%"#{title}#"%"
			</if>
			<if test="updater != null and updater != '' ">
				AND t.updater = #{updater}
			</if>
		</trim>
	</sql>
	<select id="select_article" parameterType="article" resultMap="article_DB_Result">
		SELECT
		t.code
		,t.type
		,t.title
		,t.pic
		,t.adv_pic
		,t.description
		,t.location
		,t.order_no
		,t.status
		,t.updater
		,t.update_datetime
		,t.remark
		FROM
		tdzt_article t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_article_count" parameterType="article"
		resultType="java.lang.Long">
		SELECT count(1) FROM tdzt_article t
		<include refid="where_condition" />
	</select>

	<insert id="insert_article" parameterType="article">
		INSERT INTO
		tdzt_article(
		code
		,type
		,title
		,pic
		,adv_pic
		,description
		,location
		,order_no
		,status
		,updater
		,update_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{type}
		,#{title}
		,#{pic}
		,#{advPic}
		,#{description}
		,#{location}
		,#{orderNo}
		,#{status}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		)
	</insert>

	<update id="update_article" parameterType="article">
		UPDATE tdzt_article
		SET
		type = #{type}
		,title = #{title}
		,pic = #{pic}
		,adv_pic = #{advPic}
		,description = #{description}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>

	<update id="update_putOn" parameterType="article">
		UPDATE tdzt_article
		SET
		status = #{type}
		,location = #{title}
		,order_no = #{pic}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_putOff" parameterType="article">
		UPDATE tdzt_article
		SET
		status = #{type}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>

	<delete id="delete_article" parameterType="article">
		delete from 
		tdzt_article
		WHERE 
		code = #{code}
	</delete>
</mapper>